    <script>
        function showDetail(milestoneId) {
            const timelineSection = document.querySelector('.timeline-section');
            const contactSection = document.querySelector('.contact-section');
            const heroSection = document.querySelector('.hero');
            const clickedItem = event.target.closest('.timeline-item');
            
            // Add focus effect to clicked item
            clickedItem.classList.add('zoom-focus');
            timelineSection.classList.add('transitioning');
            
            // Hide contact section smoothly
            contactSection.classList.add('hidden');
            
            setTimeout(() => {
                // Hide timeline, contact, and hero sections
                timelineSection.style.display = 'none';
                contactSection.style.display = 'none';
                heroSection.style.display = 'none';
                
                // Reset timeline classes
                timelineSection.classList.remove('transitioning');
                document.querySelectorAll('.timeline-item').forEach(item => {
                    item.classList.remove('zoom-focus');
                });
                
                // Hide all detail sections
                const allDetails = document.querySelectorAll('.detail-section');
                allDetails.forEach(section => {
                    section.classList.remove('active');
                });
                
                // Show selected detail section
                const targetDetail = document.getElementById(milestoneId);
                targetDetail.classList.add('active');
                
                // Scroll to top smoothly
                window.scrollTo({ top: 0, behavior: 'smooth' });
                
            }, 500);
        }

        function showTimeline() {
            const allDetails = document.querySelectorAll('.detail-section');
            const timelineSection = document.querySelector('.timeline-section');
            const contactSection = document.querySelector('.contact-section');
            const heroSection = document.querySelector('.hero');
            const aboutSection = document.querySelector('.about-section');
            
            // Hide current detail and about sections
            allDetails.forEach(section => {
                section.classList.remove('active');
            });
            aboutSection.classList.remove('active');
            
            // Show timeline, contact, and hero sections
            timelineSection.style.display = 'block';
            contactSection.style.display = 'block';
            heroSection.style.display = 'block';
            
            // Remove hidden class from contact section
            contactSection.classList.remove('hidden');
            
            // Scroll to timeline section smoothly
            setTimeout(() => {
                document.querySelector('#timeline').scrollIntoView({ 
                    behavior: 'smooth' 
                });
            }, 100);
        }

        // Smooth scrolling f√ºr Navigationslinks
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href').substring(1);
                
                // Check if we're currently in a detail view
                const activeDetail = document.querySelector('.detail-section.active');
                const activeAbout = document.querySelector('.about-section.active');
                
                if (targetId === 'about') {
                    // Show About section
                    showAbout();
                } else if (activeDetail || activeAbout) {
                    // If in detail or about view, first return to timeline view
                    showTimeline();
                    
                    // Then scroll to the target after timeline is shown
                    setTimeout(() => {
                        const target = document.getElementById(targetId);
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth'
                            });
                        }
                    }, 200);
                } else {
                    // Normal navigation when in timeline view
                    const target = document.getElementById(targetId);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        function showAbout() {
            const timelineSection = document.querySelector('.timeline-section');
            const contactSection = document.querySelector('.contact-section');
            const heroSection = document.querySelector('.hero');
            const aboutSection = document.querySelector('.about-section');
            
            // Hide timeline, contact, and hero sections
            timelineSection.style.display = 'none';
            contactSection.style.display = 'none';
            heroSection.style.display = 'none';
            
            // Hide all detail sections
            const allDetails = document.querySelectorAll('.detail-section');
            allDetails.forEach(section => {
                section.classList.remove('active');
            });
            
            // Show about section
            aboutSection.classList.add('active');
            
            // Scroll to top smoothly
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Add hover effect to timeline items
        document.querySelectorAll('.timeline-item').forEach(item => {
            item.addEventListener('mouseenter', function() {
                if (!document.querySelector('.timeline-section').classList.contains('transitioning')) {
                    this.style.transform = 'translateY(-3px)';
                }
            });
            
            item.addEventListener('mouseleave', function() {
                if (!this.classList.contains('zoom-focus')) {
                    this.style.transform = '';
                }
            });
        });
    </script>
</body>
